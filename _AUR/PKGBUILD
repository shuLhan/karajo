# Maintainer: shulhan <ms@kilabit.info>

pkgname=karajo-git
pkgver=0.5.0.r62.gc58ab1c
pkgrel=1

pkgdesc="Worker, scheduler, and WebHook with HTTP."
arch=(x86_64)
url='https://sr.ht/~shulhan/karajo'
license=('GPL3')

makedepends=(
	'go'
	'git'
)

provides=('karajo')

source=(
	"$pkgname::git+https://git.sr.ht/~shulhan/karajo"
	#"$pkgname::git+file:///home/ms/go/src/git.sr.ht/~shulhan/karajo"
)
sha256sums=(
	'SKIP'
)

pkgver() {
	cd "$pkgname"
	git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
	cd "$pkgname"
	make build
}

package() {
	cd "$pkgname"
	make PREFIX=${pkgdir} install
}
